{
  "name": "opbeans",
  "version": "1.0.0",
  "description": "The Opbeans inventory management system",
  "main": "server.js",
  "dependencies": {
    "after-all-results": "^2.0.0",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "opbeat": "^4.4.0",
    "pg": "^6.1.2"
  },
  "devDependencies": {
    "dotenv": "^2.0.0",
    "standard": "^8.6.0"
  },
  "scripts": {
    "db-setup": "psql -d opbeans -f db/setup.sql && psql -d opbeans -f db/products.sql && psql -d opbeans -f db/mock_customers.sql",
    "test": "standard",
    "server": "node server.js",
    "client": "node client/start-client.js",
    "client-install": "npm install --prefix client/",
    "client-build": "npm run build --prefix client/",
    "postinstall": "npm run client-install && npm run client-build",
    "test": "standard server.js server/**/*.js db/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/opbeat/opbeans.git"
  },
  "contributors": [
    "Thomas Watson Steen <thomas@opbeat.com> (https://twitter.com/wa7son)",
    "Vanja Ćosić <vanja@opbeat.com> (https://twitter.com/vanjacosic)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/opbeat/opbeans/issues"
  },
  "homepage": "https://github.com/opbeat/opbeans#readme"
}
